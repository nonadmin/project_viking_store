<%= form_for ( [:admin, order] ) do |order_form| %>

<div class="row">

  <% if !order.order_contents.empty? %> 

    <div class="col-md-6">

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>REMOVE</th>
          </tr>
        </thead>

        <tbody>
        <% order.order_contents.each do |order_item| %>
          <% if order_item.persisted? %>
            <tr>
              <td><%= order_item.product.id %></td>
              <%= order_form.fields_for :order_contents, order_item do |order_contents_form| %>
                <td>
                  <%= order_contents_form.hidden_field :product_id %>
                  <%= order_contents_form.text_field :quantity %>
                </td>
              <% end %>
              <td><%= order_item.product.price %></td>
              <td><%= (order_item.product.price * order_item.quantity) %></td>
              <%= order_form.fields_for :order_contents, order_item do |order_contents_form| %>
                <td><%= order_contents_form.check_box :_destroy %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>

    </div>

  <% end %>

  <div class="col-md-6">
    
    <table class="table">
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Quantity</th>
        </tr>
      </thead>

      <tbody>
        <% 5.times do %>
          <tr>
            <%= order_form.fields_for :order_contents, order.order_contents.build do |order_contents_form| %>
              <td><%= order_contents_form.text_field :product_id %></td>
              <td><%= order_contents_form.text_field :quantity %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>

</div>

<div>
  <%= order_form.submit %>
</div>

<% end %>