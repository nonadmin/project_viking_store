<div class="col-md-4 product-container">
  <div class="top-bottom">
    <h3><%= product.name %></h3>
  </div>
  <div class="img-container">
    <%= image_tag "placeholder.png", alt: product.name %>
    <div class="price">
      <%= number_to_currency(product.price) %>
    </div>
  </div>
  <div class="top-bottom">
    <%= link_to "Add to cart", "#", class: "btn btn-primary"  %>
  </div>
</div>