<div class="col-md-4">
  <div class="product-container">
    <div class="banner-box">
      <h3><%= product.name %></h3>
    </div>
    <div class="img-container">
      <%= image_tag "placeholder.png", alt: product.name %>
      <div class="price">
        <%= number_to_currency(product.price) %>
      </div>
    </div>
    <div class="banner-box">
      <%= link_to "Add to Cart", "#", class: "btn btn-primary"  %>
    </div>
  </div>
</div>